<section>
  <p><% if @task.nil? %></p>
  <p><%= "404 NOT FOUND" %></p>
    <% else %>
  <%= "Task #{@task.id} #{@task.name} " %>
  <ul>
    <li>
      <%= "#{@task}"%>
    </li>
  </ul>
  <% end %>
<h3><%= link_to "Task #1", task_path(1) %></h3>
</section>


