<h1> <%=action_name %> </h1>

<%= form_with model: @task, class: "task-form" do |f| %>
  <p>Modify the fields below:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :goal_completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit action_name, class: button_title %>
<% end %>
